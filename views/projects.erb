<h1>Projects</h1>

<h3>Search Projects</h3>

<form action="/projects/search" method="post">
  <div class="form-group">
    <input id="search" name="search" class='form-control' type='text'>
  </div>
  <button type="submit" class="btn">Submit</button>
</form>
<br>

<h3>Current Available Projects</h3>

<% if @projects.any? %>
  <ul>
    <% @projects.each do |project| %>
      <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no projects to display.</p>
<% end %>
<br>
<form action="/projects/new" method="get">
  <button type="submit" name="button">Add a new Project</button>
</form>
