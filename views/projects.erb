<h1>Projects</h1>

<h3>Search Projects</h3>
<form action="/projects">
  <div class="form-group">
    <input id="search" name="Search" class='form-control'>
  </div>
  <button type="submit" class="btn btn-danger" name="button">Submit</button>
</form>
<br>




<h3>Current Available Projects</h3>

<% if @projects.any? %>
  <ul>
    <% @projects.each do |project| %>
      <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no projects to display.</p>
<% end %>
<br>
<form action="/projects/new" method="get">
  <button type="click" name="button">Add a new Project</button>
</form>
